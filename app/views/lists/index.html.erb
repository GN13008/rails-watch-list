<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1542204625-ca960ca44635?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=3900&q=80);">
  <div class="container">
    <h1>Welcome to your <strong>Movie</strong> Room !</h1>
    <p>Here you can create amazing List and add bookmark</p>
    <%= link_to "Let's create some memories - Add a list", new_list_path, class: "btn btn-flat"%>  
  </div>
</div>
<br>
<div class="cards">
  <% @lists.each do |list| %>
    <% if list.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
    <% else %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1542204625-ca960ca44635?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=3900&q=80);)">
    <% end %>      
      <%= link_to ("<i class=\"fas fa-search\"></i>").html_safe, list_path(list) %>
      <%= list.name %>
    </div>
  <% end %>
</div>
</div>